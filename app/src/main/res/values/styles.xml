<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 系统默认divider样式 -->
        <item name="android:listDivider">@drawable/bg_divider</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="LoadingActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 系统默认divider样式 -->
        <item name="android:listDivider">@drawable/bg_divider</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ImageActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 系统默认divider样式 -->
        <item name="android:listDivider">@drawable/bg_divider</item>
    </style>

    <style name="button_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_ok_selector</item>
    </style>

    <style name="textview_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="theme_1" parent="Theme.AppCompat.NoActionBar">
        <item name="main_bg">@color/bg_main_normal</item>
        <item name="main_textcolor">@color/textcolor_main_normal</item>
        <item name="second_bg">@color/bg_second_normal</item>
        <item name="second_textcolor">@color/textcolor_second_normal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/textcolor_second_normal</item>
    </style>

    <style name="theme_2" parent="Theme.AppCompat.NoActionBar">
        <item name="main_bg">@color/bg_main_dark</item>
        <item name="main_textcolor">@color/textcolor_main_dark</item>
        <item name="second_bg">@color/bg_second_dark</item>
        <item name="second_textcolor">@color/textcolor_second_dark</item>
        <item name="colorPrimary">@color/textcolor_main_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>
</resources>
